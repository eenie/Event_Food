<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:padding="20dp"
    android:measureWithLargestChild="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/image_collect_food_pic"
            android:src="@drawable/ic_default_food"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="螃蟹"
            android:id="@+id/text_collect_food_name"
            android:layout_weight="1"
            android:layout_alignBottom="@id/image_collect_food_pic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#a09094a4" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="月售：345"
                android:id="@+id/text_collect_food_sell"
                android:layout_weight="1"
                android:textSize="12sp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/text_collect_food_price"
                android:text="￥10/份"
                android:textSize="15dp"
                android:layout_weight="1"
                android:singleLine="false"
                android:alpha="100"
                android:autoText="true"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="false"
                android:layout_alignWithParentIfMissing="false"
                android:background="#ffffff" />
        </LinearLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/btn_item_collect_btn"
            android:layout_weight="3"
            android:src="@drawable/star"
            android:scaleType="fitXY" />
    </LinearLayout>
</LinearLayout>

